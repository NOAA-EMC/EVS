#!/bin/bash -e

# =============================================================================
# 
# NAME: config.evs.prod.stats.cam.atmos.snowfall.hrrr 
# CONTRIBUTOR(S): Marcel Caron, marcel.caron@noaa.gov, NOAA/NWS/NCEP/EMC-VPPPGB
# PURPOSE: Set up configurations to run EVS HRRR Snowfall - Statistics
# DEPENDENCIES: $HOMEevs/scripts/stats/cam/exevs_hrrr_snowfall_stats.sh
# 
# =============================================================================

echo "BEGIN: $(basename ${BASH_SOURCE[0]})"

# METplus Settings
export MET_PLUS_OUT=${DATA}/${VERIF_CASE}/METplus_output
export MET_CONFIG_OVERRIDES=""

# Restart Settings
export RESTART_DIR="${COMOUTsmall}/restart/c${vhr}"
export COMPLETED_JOBS_FILE="completed_jobs.txt"

# Time Settings
export FHR_END_FULL="48"
export FHR_INCR_FULL="6"
export FHR_END_SHORT="18"

# Model/Obs Settings
export COMINfcst=${COMINhrrr}

# Additional Verification Settings
if [ "$ACC" = "06" ]; then
    export FHR_GROUP_LIST="SHORT FULL"
    export MODEL_ACC="06"
    export OBS_ACC="06"
    export BUCKET_INTERVAL="6"
    export FCST_LEV="A6"
    export FCST_THRESH="ge0.0254,ge0.0508,ge0.1016,ge0.2032,ge0.3048"
    if [ "$NEST" = "conus" ]; then
        export OBS_LEV="A6"
    else
        err_exit "The provided NEST, $NEST, is not supported for $MODELNAME"
    fi
    export OBS_THRESH="ge0.0254,ge0.0508,ge0.1016,ge0.2032,ge0.3048"
    export MODEL_PCP_COMBINE_METHOD="USER_DEFINED"
    export MODEL_PCP_COMBINE_COMMAND="-subtract ${COMINfcst}/hrrr.{init?fmt=%Y%m%d}/conus/hrrr.t{init?fmt=%H}z.wrfsfcf{lead?fmt=%2H}.grib2 'name=\\\"{FCST_VAR_NAME}\\\"; level=\\\"Z0\\\";\${MODEL_PCP_COMBINE_grib2_pdt}\${MODEL_PCP_COMBINE_grib2_pdt_idx1}\${MODEL_PCP_COMBINE_grib2_pdt_val1}' ${COMINfcst}/hrrr.{init?fmt=%Y%m%d}/conus/hrrr.t{init?fmt=%H}z.wrfsfcf{lead?fmt=%2H?shift=-6H}.grib2 'name=\\\"{FCST_VAR_NAME}\\\"; level=\\\"Z0\\\";\${MODEL_PCP_COMBINE_grib2_pdt}\${MODEL_PCP_COMBINE_grib2_pdt_idx2}\${MODEL_PCP_COMBINE_grib2_pdt_val2}'"
elif [ "$ACC" = "24" ]; then
    export FHR_GROUP_LIST="FULL"
    export MODEL_ACC="24"
    export OBS_ACC="24"
    export BUCKET_INTERVAL="24"
    export FCST_LEV="A24"
    export FCST_THRESH="ge0.0254,ge0.0508,ge0.1016,ge0.2032,ge0.3048"
    if [ "$NEST" = "conus" ]; then
        export OBS_LEV="A24"
    else
        err_exit "The provided NEST, $NEST, is not supported for $MODELNAME"
    fi
    export OBS_THRESH="ge0.0254,ge0.0508,ge0.1016,ge0.2032,ge0.3048"
    export MODEL_PCP_COMBINE_METHOD="USER_DEFINED"
    export MODEL_PCP_COMBINE_COMMAND="-subtract ${COMINfcst}/hrrr.{init?fmt=%Y%m%d}/conus/hrrr.t{init?fmt=%H}z.wrfsfcf{lead?fmt=%2H}.grib2 'name=\\\"{FCST_VAR_NAME}\\\"; level=\\\"Z0\\\";\${MODEL_PCP_COMBINE_grib2_pdt}\${MODEL_PCP_COMBINE_grib2_pdt_idx1}\${MODEL_PCP_COMBINE_grib2_pdt_val1}' ${COMINfcst}/hrrr.{init?fmt=%Y%m%d}/conus/hrrr.t{init?fmt=%H}z.wrfsfcf{lead?fmt=%2H?shift=-24H}.grib2 'name=\\\"{FCST_VAR_NAME}\\\"; level=\\\"Z0\\\";\${MODEL_PCP_COMBINE_grib2_pdt}\${MODEL_PCP_COMBINE_grib2_pdt_idx3}\${MODEL_PCP_COMBINE_grib2_pdt_val3}'"
else
    err_exit "The provided ACC, $ACC, is not supported for $MODELNAME"
fi
if [ "$BOOL_NBRHD" = True ]; then
    export OUTPUT_FLAG_NBRHD="STAT"
    export OUTPUT_FLAG_CATEG="NONE"
    export NBRHD_WIDTHS="1,3,5,7,9,11,13,17,21,25,31,35,39,43,47,53,57,63"
    if [ "$NEST" = "conus" ]; then
        export FHR_INCR_SHORT="1"
        export VERIF_TYPE="nohrsc"
        export COMINobs=${DCOMINsnow}
        export OBSNAME=${VERIF_TYPE}
        if [ "$OBSNAME" = "nohrsc" ]; then
            export VAR_NAME_LIST="WEASD SNOD ASNOW"
        else
            err_exit "The provided OBSNAME, $OBSNAME, is not supported for $MODELNAME"
        fi
        export MIN_IHOUR="00"
        export GRID="OBS"
        export MODEL_INPUT_TEMPLATE="hrrr.{init?fmt=%Y%m%d}/conus/hrrr.t{init?fmt=%2H}z.wrfsfcf{lead?fmt=%2H}.grib2"
        export MASK_POLY_LIST="${FIXevs}/masks/Bukovsky_G240_CONUS.nc, ${FIXevs}/masks/Bukovsky_G240_CONUS_East.nc, ${FIXevs}/masks/Bukovsky_G240_CONUS_West.nc, ${FIXevs}/masks/Bukovsky_G240_CONUS_Central.nc, ${FIXevs}/masks/Bukovsky_G240_CONUS_South.nc"
    else
        err_exit "The provided NEST, $NEST, is not supported for $MODELNAME"
    fi
else
    export OUTPUT_FLAG_NBRHD="NONE"
    export OUTPUT_FLAG_CATEG="STAT"
    export NBRHD_WIDTHS="1"
    if [ "$NEST" = "conus" ]; then
        export FHR_INCR_SHORT="1"
        export VERIF_TYPE="nohrsc"
        export COMINobs=${DCOMINsnow}
        export OBSNAME=${VERIF_TYPE}
        if [ "$OBSNAME" = "nohrsc" ]; then
            export VAR_NAME_LIST="WEASD SNOD ASNOW"
        else
            err_exit "The provided OBSNAME, $OBSNAME, is not supported for $MODELNAME"
        fi
        export MIN_IHOUR="00"
        export GRID="G212"
        export MODEL_INPUT_TEMPLATE="hrrr.{init?fmt=%Y%m%d}/conus/hrrr.t{init?fmt=%2H}z.wrfsfcf{lead?fmt=%2H}.grib2"
        export MASK_POLY_LIST="${FIXevs}/masks/Bukovsky_G212_CONUS.nc, ${FIXevs}/masks/Bukovsky_G212_CONUS_East.nc, ${FIXevs}/masks/Bukovsky_G212_CONUS_West.nc, ${FIXevs}/masks/Bukovsky_G212_CONUS_Central.nc, ${FIXevs}/masks/Bukovsky_G212_CONUS_South.nc"
    else
        err_exit "The provided NEST, $NEST, is not supported for $MODELNAME"
    fi
fi

echo "END: $(basename ${BASH_SOURCE[0]})"
