export pid=${pid:-$$}
export DATA=/lfs/h2/emc/ptmp/$USER/evs/working/${STEP}.$pid

export KEEPDATA=YES

$HOMEevs/jobs/global_det/stats/JEVS_GLOBAL_DET_AVIATION_STATS

